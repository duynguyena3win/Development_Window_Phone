<UserControl x:Class="Appboy_Feed_DN.AppboyClasses.CustomSlideupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="480" >

  <Grid Background="#80c7f4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Image Grid.Column="0" Width="90" Height="90" Margin="5" VerticalAlignment="Top" Source="/Assets/ApplicationIcon.png"/>
    <TextBlock Grid.Column="1" x:Name="Message" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Foreground="#ffffff"/>
    <Image x:Name="Chevron" Grid.Column="2" Margin="10,0,10,0" VerticalAlignment="Center" Source="\Assets\Images\Chevron\chevron.png"/>
  </Grid>
</UserControl>